#include<stdio.h>
#include<stdlib.h>

struct node{
    int info;
    struct node *next;
};

int main(){
    struct node *head,*old;
    int num = 5;
    head = (struct node*)malloc(sizeof(struct node));
    printf("node 1 : ");
    scanf("%d",&head -> info);
    head -> next = NULL;
    old = head;
    
    int i;
    for(i=2;i<=num;i++){
        struct node *n;
        n = (struct node*)malloc(sizeof(struct node));
        printf("node %d : ",i);
        scanf("%d",&n -> info);
        n -> next = NULL;
        old -> next = n;
        old = n;
    }
    int count = 0;
    struct node *temp;
    temp = (struct node*)malloc(sizeof(struct node));
    temp = head;
    while(temp != NULL){
        printf(" %d ",temp->info);
        printf("-->");
        temp = temp -> next;
        count++;
    }
    printf("\nNumber of nodes : %d",count);
    return 0;
}
